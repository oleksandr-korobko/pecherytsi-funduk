---
export interface Props {
  size?: string;
  className?: string;
}

const { size = "60", className = "" } = Astro.props;
const uniqueId = Math.random().toString(36).substr(2, 9);
---

<svg 
  width={size} 
  height={size} 
  viewBox="0 0 100 100" 
  xmlns="http://www.w3.org/2000/svg"
  class={className}
>
  <!-- Тінь -->
  <ellipse cx="50" cy="85" rx="25" ry="6" fill="#000000" opacity="0.15"/>
  
  <!-- Ніжка з градієнтом -->
  <defs>
    <linearGradient id={`stemGradient-${uniqueId}`} x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#f5f5dc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e8e8d0;stop-opacity:1" />
    </linearGradient>
    <radialGradient id={`capGradient-${uniqueId}`}>
      <stop offset="0%" style="stop-color:#faf8f3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d4c5a0;stop-opacity:1" />
    </radialGradient>
  </defs>
  
  <ellipse cx="50" cy="65" rx="12" ry="20" fill={`url(#stemGradient-${uniqueId})`} />
  
  <!-- Шапка з градієнтом -->
  <ellipse cx="50" cy="40" rx="30" ry="25" fill={`url(#capGradient-${uniqueId})`} />
  
  <!-- Деталі шапки -->
  <ellipse cx="50" cy="42" rx="25" ry="20" fill="#f0e6d2" opacity="0.5"/>
  
  <!-- Бліки -->
  <ellipse cx="38" cy="35" rx="8" ry="6" fill="#ffffff" opacity="0.7"/>
  <ellipse cx="60" cy="40" rx="4" ry="3" fill="#ffffff" opacity="0.4"/>
</svg>