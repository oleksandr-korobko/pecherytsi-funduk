---
export interface Props {
  subtitle?: string;
  title: string;
  description?: string;
  alignment?: 'left' | 'center' | 'right';
  variant?: 'light' | 'dark';
  className?: string;
}

const { 
  subtitle,
  title,
  description,
  alignment = 'center',
  variant = 'light',
  className = ''
} = Astro.props;

const alignmentClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};

const textColor = variant === 'light' ? 'text-eco-dark' : 'text-white';
const subtitleColor = variant === 'light' ? 'text-eco-light' : 'text-eco-mint';
const descriptionColor = variant === 'light' ? 'text-gray-600' : 'text-white/80';
---

<div class={`mb-12 ${alignmentClasses[alignment]} ${className}`}>
  {subtitle && (
    <span class={`${subtitleColor} font-semibold text-sm uppercase tracking-wider block mb-4`}>
      {subtitle}
    </span>
  )}
  
  <h2 class={`text-4xl lg:text-5xl font-bold ${textColor} leading-tight`}>
    <Fragment set:html={title} />
  </h2>
  
  {description && (
    <p class={`${descriptionColor} mt-4 text-lg max-w-3xl ${alignment === 'center' ? 'mx-auto' : ''}`}>
      {description}
    </p>
  )}
</div>