---
export interface Props {
  title: string;
  subtitle?: string;
  backgroundGradient?: 'primary' | 'secondary' | 'tertiary';
  showFloatingElements?: boolean;
  className?: string;
}

const { 
  title, 
  subtitle,
  backgroundGradient = 'primary',
  showFloatingElements = true,
  className = '' 
} = Astro.props;

const gradients = {
  primary: 'hero-gradient',
  secondary: 'from-eco-brown/90 to-eco-dark/90',
  tertiary: 'from-eco-sage/90 to-eco-mint/90'
};

const gradientClass = backgroundGradient === 'primary' ? gradients.primary : `bg-gradient-to-br ${gradients[backgroundGradient]}`;
---

<section class={`relative min-h-[60vh] flex items-center justify-center overflow-hidden ${className}`}>
  <!-- Background with parallax effect -->
  <div class={`absolute inset-0 ${gradientClass}`}></div>
  <div class="absolute inset-0 leaf-pattern opacity-20"></div>
  
  {showFloatingElements && (
    <>
      <!-- Floating elements -->
      <div class="absolute top-20 left-10 w-16 h-16 mushroom-animation opacity-20">
        <MushroomSVG size="64" />
      </div>
      <div class="absolute bottom-20 right-10 text-6xl nut-animation opacity-20">ðŸŒ°</div>
      <div class="absolute top-1/3 right-20 text-4xl animate-float-delay opacity-15">ðŸŒ¿</div>
      <div class="absolute bottom-1/3 left-20 text-5xl animate-pulse-slow opacity-15">ðŸŒ³</div>
    </>
  )}
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 text-center">
    <h1 class="text-4xl lg:text-6xl font-bold text-white mb-6 animate-fade-in text-shadow-eco">
      {title}
    </h1>
    {subtitle && (
      <p class="text-xl lg:text-2xl text-white/90 max-w-3xl mx-auto mb-12 animate-slide-up">
        {subtitle}
      </p>
    )}
    
    <!-- Slot for custom content (CTA buttons, etc.) -->
    <slot />
  </div>
</section>